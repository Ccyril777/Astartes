{% extends 'base.html.twig' %}

{% block title %}Heading index{% endblock %}

{% block body %}
    <h1>Heading index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for heading in headings %}
            <tr>
                <td>{{ heading.id }}</td>
                <td>{{ heading.name }}</td>
                <td>{{ heading.description }}</td>
                <td>{{ heading.image }}</td>
                <td>
                    <a href="{{ path('heading_show', {'id': heading.id}) }}">show</a>
                    <a href="{{ path('heading_edit', {'id': heading.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('heading_new') }}">Create new</a>
{% endblock %}
